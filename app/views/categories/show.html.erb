<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<%= link_to 'Back', categories_path %>

<h1>Listing Products</h1>

<table class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>Position</th>
    <th>Name</th>
    <th class="hidden-xs">Image</th>
    <th>Price</th>

  </tr>
  </thead>

  <tbody>
  <% @category.products.each_with_index do |product, index| %>
      <tr data-link="<%= product.url %>"  onclick="window.open($(this).data('link'),'_blank')">
        <td><%= index+1 %></td>
        <td><%= product.name %></td>
        <td><img src="<%= product.image %>" title="<%= product.name %>" alt="<%= product.name %>" class="hidden-xs"></td>
        <td><%= product.price %></td>
      </tr>
  <% end %>
  </tbody>
</table>
